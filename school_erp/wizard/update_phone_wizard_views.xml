<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_phone_wizard_form" model="ir.ui.view">
        <field name="name">view.phone.wizard.form</field>
        <field name="model">phone.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="update_phone"/>
                </group>
                <footer>
                    <button name="phone_update" string="Update Phone" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="phone_wizard_action_record" model="ir.actions.act_window">
        <field name="name">Update Phone</field>
        <field name="res_model">phone.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_phone_wizard_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="school_erp.model.res.partner"/>
        <field name="binding_view_types">form,list</field>
    </record>
</odoo>